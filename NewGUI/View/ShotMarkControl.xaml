<UserControl x:Class="NewGUI.View.ShotMarkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewGUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
	<Canvas Width="40" Height="40">
		<Ellipse x:Name="oMark"
			Visibility="Hidden"
			Panel.ZIndex="1"
			Width="32"
			Height="32"
			Margin="4"
			StrokeThickness="3"
		/>
		<Canvas x:Name="xMark"
			Visibility="Hidden"
			Width="40"
			Height="40"
			Panel.ZIndex="1"
		>
			<Line x:Name="xLine1"
				X1="0" Y1="0"
				X2="32" Y2="32"
				Margin="4"
				StrokeThickness="3"
				StrokeStartLineCap="Round"
				StrokeEndLineCap="Round"
			/>
			<Line x:Name="xLine2"
				X1="0" Y1="32"
				X2="32" Y2="0"
				Margin="4"
				StrokeThickness="3"
				StrokeStartLineCap="Round"
				StrokeEndLineCap="Round"
			/>
		</Canvas>
	</Canvas>
</UserControl>
